{
  // Biome을 기본 포매터로 설정
  "editor.defaultFormatter": "biomejs.biome",

  // 저장 시 자동 포맷 활성화
  "editor.formatOnSave": true,

  // 붙여넣기 시 자동 포맷 활성화
  "editor.formatOnPaste": true,

  // 코드 액션 자동 실행 (import 정리 등)
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit"
  },

  // ESLint 비활성화
  "eslint.enable": false,

  // TypeScript/JavaScript 파일에서 Biome 사용
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
